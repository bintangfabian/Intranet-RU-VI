@page "/isifototerkini"

<div class="container mt-5">
    <h4 class="mb-4 fw-bold">FOTO TERKINI</h4>
    <p class="fw-bold">Kunjungan Komisaris Utama Pertamina Gilang Riyanto</p>
    <p>31 Juli 2024</p>
    
    <!-- Gambar Besar di Atas -->
    <div class="text-center mb-4">
        <img src="isifoto4.jpg" class="img-fluid main-photo" alt="Main Photo" style="width: 100%; height: auto; max-width: 700px;">
    </div>

    <!-- Carousel untuk Foto Kecil di Bawah -->
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" style="max-width: 400px; margin: 0 auto;">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="isifoto1.jpg" class="d-block w-100" alt="Slide 1">
            </div>
            <div class="carousel-item">
                <img src="isifoto2.jpg" class="d-block w-100" alt="Slide 2">
            </div>
            <div class="carousel-item">
                <img src="isifoto3.jpg" class="d-block w-100" alt="Slide 3">
            </div>
            <div class="carousel-item">
                <img src="isifoto4.jpg" class="d-block w-100" alt="Slide 4">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

